    "target": "ES2022",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./**/*.ts"], 
  "exclude": ["dist"]
}
